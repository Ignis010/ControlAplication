<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".table">

    <FrameLayout
        android:id="@+id/onMainLayout"
        android:layout_width="match_parent"

        android:layout_height="50dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent">


        <Button
            android:id="@+id/onMain"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:onClick="Click"
            android:text="@string/onMain" />
    </FrameLayout>

    <androidx.gridlayout.widget.GridLayout
        android:layout_width="match_parent"
        android:layout_height="680dp"

        app:layout_constraintTop_toBottomOf="@+id/onMainLayout"
        app:layout_constraintLeft_toLeftOf="parent"


        app:columnCount="2"

        android:layout_marginVertical="50dp"
        android:layout_marginHorizontal="30dp">



        <ImageView
            android:id="@+id/imageView"

            android:layout_width="150dp"
            android:layout_height="150dp"

            android:layout_marginEnd="30dp"
            android:layout_marginBottom="50dp"

            android:contentDescription="@string/sword1"
            android:onClick="ClickImage"

            app:srcCompat="@drawable/sword"
            tools:ignore="DuplicateSpeakableTextCheck" />

        <ImageView
            android:id="@+id/imageView2"

            android:layout_width="150dp"
            android:layout_height="150dp"

            android:contentDescription="@string/sword1"

            android:onClick="ClickImage"

            app:srcCompat="@drawable/sword3" />

        <ImageView
            android:id="@+id/imageView3"

            android:layout_width="150dp"
            android:layout_height="150dp"

            android:contentDescription="@string/sword1"

            app:srcCompat="@drawable/sword2"

            android:layout_marginBottom="50dp"

            android:onClick="ClickImage"/>

        <ImageView
            android:id="@+id/imageView4"

            android:layout_width="150dp"
            android:layout_height="150dp"

            app:srcCompat="@drawable/sword4"

            android:contentDescription="@string/sword1"

            android:onClick="ClickImage"/>

        <ImageView
            android:id="@+id/imageView5"

            android:layout_width="150dp"
            android:layout_height="150dp"

            android:contentDescription="@string/sword1"

            android:onClick="ClickImage"

            app:srcCompat="@drawable/sword5"
            tools:ignore="ImageContrastCheck" />

        <ImageView
            android:id="@+id/imageView6"

            android:layout_width="150dp"
            android:layout_height="150dp"

            app:srcCompat="@drawable/sword6"

            android:contentDescription="@string/sword1"

            android:onClick="ClickImage"/>

    </androidx.gridlayout.widget.GridLayout>

</androidx.constraintlayout.widget.ConstraintLayout>